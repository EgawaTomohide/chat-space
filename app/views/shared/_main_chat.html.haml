.chat-main
  .chat-main_header
    .chat-main_header_main__group
      .chat-main_header_main__group_mame
        =@group.name
      %ul.chat-main_header_main__group_mamber
        Member : 
        %li.chat-main_header_main__group_mamber_rist
        - @group.users.each do |user|
          = user.name      
    =link_to edit_group_path(@group),class:"edit-btn" do
      Edit
  .chat-main_messages   
    = render partial:'shared/message',collection: @messages 
    

  .chat-main_message_form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__text", placeholder: 'type a message'
        = f.label :image, class: "input-box__image" do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: "input-box__image__file"
      = f.submit 'Send', class: "submit-btn"