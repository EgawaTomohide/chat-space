.chat-side
  .chat-side-header
    .chat-side-header_dox
      %p.chat-side-header_dox_username
        test
    %u1.chat-side-header_dox_menu
      =link_to new_group_path,class: "contents__btn" do
        =icon('fas','edit')
      =link_to edit_user_path(current_user),class: "contents__btn" do
        =icon('fas','cog')
  .chat-side-groups
    - current_user.groups.each do |group|
      .chat-side-groups_list
        = link_to group_messages_path(group) do
          .chat-side-groups_list_name
            = group.name
          .chat-side-groups_list_preview
            = group.show_last_message
       